<h2 class="dashboard">Dashboard</h2>

<h3>Welcome to your Dashboard <%= currentUser.name %>! This is where you can manage all of the stocks you have chosen to track.</h3>
<% console.log(currentUser) %>


<%getStocks.forEach(stock => { %>
<div class="row">
    <div class="stocks nine columns">
        <a href="/dashboard/<%= stock.name %><%= stock.symbol %>"><%= stock.name %> <%= stock.symbol %></a>
    </div>



<form class="three columns" method="POST" action="/dashboard?_method=DELETE">
    <input hidden type="text" name="name" value="<%= stock.name %>">
    <input hidden type="text" name="symbol" value="<%= stock.symbol %>">
    <button type="submit">Delete from Tracker</button>
</form>
</div>
<% }) %>
